<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".RegistrarDatosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menuBarDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33AA37"
        app:title="Registrar datos"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="652dp"
        android:layout_margin="10dp"
        android:background="@drawable/fondo_datos">

        <LinearLayout
            android:id="@+id/linlayDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvCalendario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_calendario"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:hint="Selecciona fecha de registro"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvNiebla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Niebla"
                android:textAlignment="center"
                android:textColor="#424141"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/llNiebla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbNiebla"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Niebla"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="95dp"
                    tools:layout_editor_absoluteY="145dp" />

                <Spinner
                    android:id="@+id/sDensidad"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    tools:layout_editor_absoluteX="273dp"
                    tools:layout_editor_absoluteY="150dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tvFranjas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:paddingLeft="10dp"
                android:hint="Selecciona franja horaria"
                android:textColor="#424141"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLluvia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Lluvia"
                android:textAlignment="center"
                android:textColor="#424141"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llLluvia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/cblluvia"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="Luvia"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etHoraLluvia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_time"
                    android:hint="Duración HH:mm "
                    android:inputType="time"
                    android:paddingTop="6dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAgua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:text="Cortes de agua"
                android:textAlignment="center"
                android:textColor="#424141"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llAgua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/cbAgua"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="Cortes de agua"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etHoraAqua"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_time"
                    android:hint="Duración HH:mm "
                    android:inputType="time"
                    android:paddingTop="6dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvIncidencias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Incidencias"
                android:textAlignment="center"
                android:textColor="#424141"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:paddingLeft="10dp"
                android:hint="Escribe comentario de incidencia"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCaudalimetro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Caudalímetro"
                android:textAlignment="center"
                android:textColor="#CA1A1A"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llCaudalimetro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <EditText
                    android:id="@+id/etM3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvm3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="m3"
                    android:textColor="#050505"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etLitros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvlitros"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="litros"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etMl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvml"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="ml"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bRegistrarDatos"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                android:background="@drawable/boton_round"
                android:text="Registrar datos"
                android:textAlignment="center" />

        </LinearLayout>



    </ScrollView>

    >

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>